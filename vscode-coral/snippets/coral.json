{
    "Function": {
        "prefix": "fn",
        "body": [
            "fn ${1:name} with ${2:params}",
            "    ${0}"
        ],
        "description": "Create a function"
    },
    "Function with defaults": {
        "prefix": "fnd",
        "body": [
            "fn ${1:name} with ${2:params}",
            "    ${3:param} ? ${4:default}",
            "    ${0}"
        ],
        "description": "Create a function with default parameters"
    },
    "Object": {
        "prefix": "obj",
        "body": [
            "object ${1:name}",
            "    ${2:property}",
            "    ${0}"
        ],
        "description": "Create an object definition"
    },
    "Store": {
        "prefix": "store",
        "body": [
            "store ${1:name}",
            "    ${2:field}",
            "    ${0}"
        ],
        "description": "Create a store definition"
    },
    "If statement": {
        "prefix": "if",
        "body": [
            "if ${1:condition}",
            "    ${0}"
        ],
        "description": "Create an if statement"
    },
    "If-else statement": {
        "prefix": "ife",
        "body": [
            "if ${1:condition}",
            "    ${2}",
            "else",
            "    ${0}"
        ],
        "description": "Create an if-else statement"
    },
    "For loop": {
        "prefix": "for",
        "body": [
            "for ${1:item} in ${2:collection}",
            "    ${0}"
        ],
        "description": "Create a for loop"
    },
    "While loop": {
        "prefix": "while",
        "body": [
            "while ${1:condition}",
            "    ${0}"
        ],
        "description": "Create a while loop"
    },
    "Assignment": {
        "prefix": "is",
        "body": [
            "${1:variable} is ${0:value}"
        ],
        "description": "Create an assignment"
    },
    "Log": {
        "prefix": "log",
        "body": [
            "log ${0}"
        ],
        "description": "Log a value"
    },
    "Ternary": {
        "prefix": "tern",
        "body": [
            "${1:condition} ? ${2:then} ! ${0:else}"
        ],
        "description": "Create a ternary expression"
    },
    "String interpolation": {
        "prefix": "str",
        "body": [
            "'${1:text} {${2:expression}} ${0:more_text}'"
        ],
        "description": "Create an interpolated string"
    }
}