{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"],
        ["{", "}"]
    ],
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["{", "}"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["{", "}"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(fn|object|store|actor|make|if|else|for|while|unless|until|@)\\b.*$",
        "decreaseIndentPattern": "^\\s*(else)\\b.*$"
    },
    "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
}